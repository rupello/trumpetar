pipe-color = yellow
bg-color = white
mouthpiece-color = #ccc
valve-color = #ccc
cap-color = #b3b3b3


div
  z-index: 1000
  position: relative

#container
  position: absolute;
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

#main-pipe
  background-color: pipe-color
  width: 350px
  height: 75px
  border-radius: 1000px
  padding: 15px
  z-index: 99999
  .filler
    background-color: bg-color
    width: 100%
    height: 100%
    border-radius: 1000px
    z-index: 1000


#lead-pipe
  width: 100px
  height: 15px
  background-color: pipe-color
  position: absolute
  top: 0
  left: -15px


#receiver
  height: 15px
  width: 20px
  position: absolute
  background-color: pipe-color
  top: 0
  left: -20px

#mouthpiece-stem
  background-color: mouthpiece-color
  position: absolute
  top: 1px
  left: -40px
  width: 20px
  height: 13px


#mouthpiece-cup
  height: 25px
  width: 10px
  position: absolute
  top: -5px
  left: -50px
  background-color: mouthpiece-color
  border-radius: 20px
  z-index: 1001

#valves
  position: absolute
  height: 130px
  top: -10px
  left: 140px
  width: 125px
  z-index: 100000
  .valve
    height: 100%
    width: 15%
    background-color: pipe-color
    position: absolute

#valves .valve.pressed .piston
  height: 5px
  top: -5px

#valves .valve.pressed .button
  top: -5px

#valves .valve .bottom-cap
  position: absolute
  bottom: 0
  width: 100%
  background-color: cap-color
  height: 2px

#valves .valve .top-cap
  position: absolute
  top: 0
  width: 100%
  background-color: cap-color
  height: 2px


#valves .valve .piston
  position: absolute
  top: -15px
  width: 4px
  height: 15px
  background-color: valve-color
  left: 7px

#valves .valve .button
  width: 12px
  height: 4px
  position: absolute
  top: -19px
  left: 3px
  background-color: mouthpiece-color

#valves .valve:nth-child(1)
  left: 0

#valves .valve:nth-child(2)
  left: 30%

#valves .valve:nth-child(3)
  left: 60%

#bell
  position: absolute
  background-color: pipe-color
  top: -50px
  right: -100px
  height: 130px
  width: 300px
  z-index: 100

#bell .top-flare
  position: absolute
  z-index: 100
  background-color: bg-color
  border-radius: 200px
  width: 1000px
  height: 200px
  right: -10px
  top: -150px

#bell .bottom-flare
  position: absolute
  z-index: 100
  background-color: bg-color
  border-radius: 200px
  width: 1000px
  height: 200px
  right: -3px
  bottom: -135px
